<description><![CDATA[
<p><strong>Gnosis Pure CSS Tooltip</strong> <strong>v. 0<em>1.0.9b</em></strong></p>
]]></description>
<files>
   <filename plugin="gnosisplg">gnosisplg.php</filename> 
   <filename>index.html</filename>
   <folder>css</folder>
   <folder>language</folder>
</files>
<languages folder="language">
	<language tag="en-GB">en-GB/en-GB.plg_content_gnosisplg.ini</language>
	<language tag="fr-FR">fr-FR/fr-FR.plg_content_gnosisplg.ini</language>
</languages>
<config>
	<fields name="params">
		<fieldset name="basic">
		
			<field type="spacer" name="spacer2" label="PLG_GNOSIS_SPACER2" />
			<field type="spacer" name="spacer4" label="PLG_GNOSIS_MODE_WARNING" />
			<field name="gpmode" class="btn-group" type="radio" default="0" label="PLG_GNOSIS_MODE" description="PLG_GNOSIS_MODE_TAGS_DESC">
				<option value="0">PLG_GNOSIS_MODE_TAGS</option>
				<option value="1">PLG_GNOSIS_MODE_NO_TAGS</option>
			</field>
		
			<field type="spacer" name="spacer1" label="PLG_GNOSIS_SPACER1" />
			<field name="gpbackground" type="color" default="#9fdaee" label="PLG_GNOSIS_BGCOLOR" description="PLG_GNOSIS_BGCOLOR_DESC" size="10" />
			<field name="gpfontcolor" type="color" default="$000000" label="PLG_GNOSIS_FCOLOR" description="PLG_GNOSIS_FCOLOR_DESC" size="10" />
			<field name="gpwidth" type="text" default="250px" label="PLG_GNOSIS_WIDTH" description="PLG_GNOSIS_WIDTH_DESC" size="10" />
		
			<field name="gpborderthickness" type="text" default="1px" label="PLG_GNOSIS_BTHICK" description="PLG_GNOSIS_BTHICK_DESC" size="10" />
			
			<field name="gpborderstyle" type="list" default="solid" label="PLG_GNOSIS_BSTYLE" description="PLG_GNOSIS_BSTYLE_DESC">
				<option value="solid">PLG_GNOSIS_BSTYLE_S</option>
				<option value="dashed">PLG_GNOSIS_BSTYLE_DA</option>
				<option value="dotted">PLG_GNOSIS_BSTYLE_DO</option>
				<option value="none">PLG_GNOSIS_BSTYLE_NONE</option>			
			</field>
			
			
			<field name="gpbordercolor" type="color" default="#2BB0D7" label="PLG_GNOSIS_BCOLOR" description="PLG_GNOSIS_BCOLOR_DESC" size="10" />
		
			<field name="gpdefshow" type="list" default="1" label="PLG_GNOSIS_DSHOW" description="PLG_GNOSIS_DSHOW_DESC">
				<option value="0">PLG_GNOSIS_NO</option>
				<option value="1">PLG_GNOSIS_YES</option>	
			</field>
			<field name="gpdefsize" type="text" default="0" label="PLG_GNOSIS_DEF_SIZE" description="PLG_GNOSIS_DEF_SIZE_DESC" size="10" />
		
		
			<field name="gpexshow" type="list" default="1" label="PLG_GNOSIS_EXSHOW" description="PLG_GNOSIS_EXSHOW_DESC">
				<option value="0">PLG_GNOSIS_NO</option>
				<option value="1">PLG_GNOSIS_YES</option>	
			</field>		
			<field name="gpexsize" type="text" default="0" label="PLG_GNOSIS_EX_SIZE" description="PLG_GNOSIS_EX_SIZE_DESC" size="10" />
			
			
			<field name="gpetshow" type="list" default="1" label="PLG_GNOSIS_ETSHOW" description="PLG_GNOSIS_ETSHOW_DESC">
				<option value="0">PLG_GNOSIS_NO</option>
				<option value="1">PLG_GNOSIS_YES</option>	
			</field>			
			<field name="gpetsize" type="text" default="0" label="PLG_GNOSIS_ET_SIZE" description="PLG_GNOSIS_ET_SIZE_DESC" size="10" />

		</fieldset>
	</fields>
</config>
</extension>