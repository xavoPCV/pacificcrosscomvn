<?xml version="1.0" encoding="utf-8"?>
<install type="fleximport_field">
	<name>Categories</name>
	<author>NetAssoPro</author>
	<creationDate>December 2013</creationDate>
	<copyright>(C) 2008-2013 NetAssopro</copyright>
	<license>Free</license>
	<authorEmail>contact@netassopro.com</authorEmail>
	<authorUrl>extensions.netassopro.com</authorUrl>
	<version>2.0</version>
	<description>Categories field plugin model for flexIMPORT</description>
	<system>true</system>
		<form>
		<fields name="params">
			<fieldset name="fleximport">
				<field name="categories_default" type="category" extension="com_content" multiple="true" label="COM_FLEXIMPORT_FIELD_CATEGORIES_DEFAULT" description="COM_FLEXIMPORT_FIELD_CATEGORIES_DEFAULT_DESC" />
				<field name="categories_force_default" type="list" default="0" label="COM_FLEXIMPORT_FIELD_CATEGORIES_FORCE_DEFAULT" description="COM_FLEXIMPORT_FIELD_CATEGORIES_FORCE_DEFAULT_DESC" >
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="categories_format" type="list" default="1" label="COM_FLEXIMPORT_FIELD_CATEGORIES_FORMAT" description="COM_FLEXIMPORT_FIELD_CATEGORIES_FORMAT_DESC" >
					<option value="1">COM_FLEXIMPORT_FIELD_CATEGORIES_FORMAT_ID</option>
					<option value="2">COM_FLEXIMPORT_FIELD_CATEGORIES_FORMAT_NAME</option>
				</field>
				<field name="categories_split" type="text" label="COM_FLEXIMPORT_FIELD_CATEGORIES_SPLIT" description="COM_FLEXIMPORT_FIELD_CATEGORIES_SPLIT_DESC" />
			</fieldset>
		</fields>
	</form>
</install>